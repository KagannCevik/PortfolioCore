@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1> Referans Güncelleme Sayfası</h1>
<form method="post" class="form-control-color">
    <input type="hidden" asp-for="TestimonialId" />
    <label>Ad Soyad</label>
    <input type="text" class="form-control" asp-for="NameSurname" />
    <br />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Mesaj Detay</label>
    <input type="text" class="form-control" asp-for="CommentDetail" />
    <br />
    <label>Image Url</label>
    <input type="text" class="form-control" asp-for="ImageUrl" />
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

