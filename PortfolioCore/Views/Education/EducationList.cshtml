@model List<Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Eğitim Bilgilerim</h2>
        <a href="/Education/CreateEducation/" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Yeni Kayıt Ekle
        </a>
    </div>

    <div class="table-responsive shadow-sm p-4 bg-light rounded">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Alt Başlık</th>
                    <th>Tarih</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EducationId</td>
                        <td class="fw-semibold">@item.Title</td>
                        <td>@item.SubTitle</td>
                        <td>@item.DateInfo</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="/Education/EducationUpdate/@item.EducationId" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                            <br />
                            <br />
                            <a href="/Education/EducationDelete/@item.EducationId" class="btn btn-sm btn-danger" onclick="return confirm('Bu kaydı silmek istediğine emin misin?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
