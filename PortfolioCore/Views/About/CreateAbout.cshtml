@model PortfolioCore.Entities.About
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2> Hakkımda Sayfası</h2>
<form method="post">
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid black;" />
    <br />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black;" />
    <br />
    <label>Başlık Açıklama</label>
    <input type="text" class="form-control" asp-for="TitleDescription" style="border:1px solid black;" />
    <br />
    <label>Doğum Tarihi</label>
    <input type="text" class="form-control" asp-for="BirthDay" style="border:1px solid black;" />
    <br />
    <label> Şehir</label>
    <input type="text" class="form-control" asp-for="City" style="border:1px solid black;" />
    <br />
    <label>Yaş</label>
    <input type="text" class="form-control" asp-for="Age" style="border:1px solid black;" />
    <br />
    <label>Email</label>
    <input type="email" class="form-control" asp-for="Email" style="border:1px solid black;" />
    <br />
    <label>Resim Url</label>
    <input type="text" class="form-control" asp-for="ImageUrl" style="border:1px solid black;" />
    <br />
    <button class="btn btn-primary">Deneyimi Oluştur</button>
</form>

